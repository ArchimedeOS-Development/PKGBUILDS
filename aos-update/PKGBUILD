pkgname=aos-update
pkgver=1.0
pkgrel=1
pkgdesc="Outil de mise à jour système pour ArchimedeOS"
arch=('any')
url="https://github.com/ArchimedeOS-Development/aos-bash-command"
license=('GPL')
depends=('bash' 'pacman')
provides=('aos-update')
source=('aos-update')
sha256sums=('SKIP')

package() {
  install -Dm755 "${srcdir}/aos-update" "${pkgdir}/usr/bin/aos-update"
}
