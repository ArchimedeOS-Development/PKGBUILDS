pkgname=calamares
pkgver=1.0.0
pkgrel=2
pkgdesc="Calamares installer for ArchimedeOS"
arch=('any')
url="https://github.com/ArchimedeOS-Development/calamares"
license=('GPL')
makedepends=('git' 'cmake' 'qt5-webengine' 'qt5-webview' 'qt5-xmlpatterns' 'boost' 'extra-cmake-modules' 'polkit-qt5' 'kcoreaddons')
conflicts=('calamares-git')
provides=('calamares')
source=("git+https://github.com/ArchimedeOS-Development/calamares.git")
sha256sums=('SKIP')

build() {
  cd "$srcdir/calamares"

  mkdir -p build
  cd build

  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DWITH_PYTHON=ON

  make
}

package() {
  cd "$srcdir/calamares/build"
  make DESTDIR="$pkgdir" install
}
